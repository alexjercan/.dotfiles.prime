             36000
        , Run BatteryP ["BAT0"]
             ["-t", "<acstatus>"
             , "-L", "10", "-H", "80"
             , "-l", "#ff6c6b", "-h", "#98be65"
             , "--", "-O", "Charging (<left>%)", "-o", "Battery: <left>%", "-i", "Battery Full"
             , "-a", "notify-send -u critical 'Battery running out!!'"
             , "-A", "5" ]
