             , ("considerable cloudiness", "\xf137")]
             ["-t", "<action=`gnome-weather`><fc=#d8bfd8> <station> <fn=2><skyConditionS></fn> <tempC>Â°</fc></action>"
             , "-L","10", "-H", "25", "--normal", "black"
